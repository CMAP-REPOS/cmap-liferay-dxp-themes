<?xml version="1.0"?>
<!DOCTYPE look-and-feel PUBLIC "-//Liferay//DTD Look and Feel 7.0.0//EN" "http://www.liferay.com/dtd/liferay-look-and-feel_7_0_0.dtd">

<look-and-feel>
	<compatibility>
		<version>7.1.0+</version>
	</compatibility>
	<theme id="cmap-2019-theme" name="CMAP 2019 Theme">

		<color-scheme id="01" name="Default">
			<default-cs>true</default-cs>
			<css-class>default-theme</css-class>
			<color-scheme-images-path>
				${images-path}/themes/${css-class}
			</color-scheme-images-path>
		</color-scheme>

		<color-scheme id="02" name="Blue Background">
			<default-cs>false</default-cs>
			<css-class>blue-theme</css-class>
			<color-scheme-images-path>
				${images-path}/themes/${css-class}
			</color-scheme-images-path>
		</color-scheme>

		<color-scheme id="03" name="Grey Background">
			<default-cs>false</default-cs>
			<css-class>grey-theme</css-class>
			<color-scheme-images-path>
				${images-path}/themes/${css-class}
			</color-scheme-images-path>
		</color-scheme>

		<color-scheme id="04" name="Black Background">
			<default-cs>false</default-cs>
			<css-class>black-theme</css-class>
			<color-scheme-images-path>
				${images-path}/themes/${css-class}
			</color-scheme-images-path>
		</color-scheme>

		<template-extension>ftl</template-extension>

		<portlet-decorator id="margin-bottom" name="Margin Bottom">
			<default-portlet-decorator>true</default-portlet-decorator>
			<portlet-decorator-css-class>margin-bottom-portlet</portlet-decorator-css-class>
		</portlet-decorator>
		<portlet-decorator id="default" name="Default">
			<portlet-decorator-css-class>default-portlet</portlet-decorator-css-class>
		</portlet-decorator>
        <portlet-decorator id="full-width-content" name="Full Width Content">
        <default-portlet-decorator>true</default-portlet-decorator>
        <portlet-decorator-css-class>portlet-full-width</portlet-decorator-css-class>
        </portlet-decorator>
	</theme>
</look-and-feel>